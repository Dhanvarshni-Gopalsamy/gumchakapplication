<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShotsPage"
        android:background="@drawable/imgbc">

        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorViolet"
            android:id="@+id/positiontool">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/ba"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_arrow_back"
                    />
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/logo"
                    android:maxWidth="30dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="190dp"
                    android:text="POSITIONS"
                    android:textColor="@color/colorYellow"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light"/>

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@id/title"
                    android:id="@+id/logout"
                    android:layout_marginStart="80dp"
                    android:background="@drawable/logout"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/positiontool">

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/positiontool">



                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="Project"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorYellow"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/heading"
                    android:layout_below="@id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="267dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Choose Your Shot"
                        android:textColor="@color/colorYellow"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="264dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Choose,From Where you will going to shoot your video"
                        android:textColor="@color/colorText"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box1"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:layout_below="@id/heading"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/Indoor"
                        android:layout_width="207dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/indoor" />

                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Indoor"
                            android:textColor="@color/colorYellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Choose Your Shot as Indoor"
                            android:textColor="@color/colorText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/box2"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:layout_below="@id/box1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Outdoor"
                            android:textColor="@color/colorYellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Choose Your Shot as Outdoor"
                            android:textColor="@color/colorText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Outdoor"
                        android:layout_width="222dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/outdoor" />


                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

    </FrameLayout>


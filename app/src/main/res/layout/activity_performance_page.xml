<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerformancePage"
    android:background="@drawable/imgbc">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorViolet">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/b"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_arrow_back"
                />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/logo"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/logo"
                android:maxWidth="30dp"
                android:maxHeight="100dp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_marginStart="180dp"
                android:text="PERFORMANCE"
                android:textColor="@color/colorYellow"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@id/title"
                android:id="@+id/logout"
                android:layout_marginStart="30dp"
                android:background="@drawable/logout"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="70dp">
        <TextView
            android:id="@+id/text"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorYellow"
            android:textSize="24dp"
            android:textStyle="italic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/performanceimg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/sing" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginStart="124dp"
                android:fontFamily="sans-serif"
                android:text="Singing"
                android:textColor="#F9D71C"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-20dp"
                android:text="Choose Your Performance as Singing "
                android:textColor="#FFF0F5"
                android:textSize="18dp" />
        </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="30dp"
                    android:fontFamily="sans-serif"
                    android:text="Dancing"
                    android:textColor="#F9D71C"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="center"
                    android:text="Choose Your Performance as Dancing "
                    android:textColor="#FFF0F5"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="184dp"
                android:adjustViewBounds="true"
                android:maxWidth="900dp"
                android:maxHeight="700dp"
                android:scaleType="fitXY"
                android:src="@drawable/dance" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="900dp"
                android:maxHeight="700dp"
                android:scaleType="fitXY"
                android:src="@drawable/ins1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="110dp"
                    android:fontFamily="sans-serif"
                    android:text="Video resume"
                    android:textColor="#F9D71C"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-20dp"
                    android:text="Choose Your Performance as Video resume "
                    android:textColor="#FFF0F5"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:text="Story Telling"
                    android:textColor="#F9D71C"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="center"
                    android:text="Choose Your Performance as Story Telling"
                    android:textColor="#FFF0F5"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="184dp"
                android:adjustViewBounds="true"
                android:maxWidth="900dp"
                android:maxHeight="700dp"
                android:scaleType="fitXY"
                android:src="@drawable/sto" />
        </RelativeLayout>

        </LinearLayout>

</FrameLayout>
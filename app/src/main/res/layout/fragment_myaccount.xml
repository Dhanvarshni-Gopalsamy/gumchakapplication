<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyaccountFragment"
    android:background="@drawable/imgbc">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp">
            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8B008B">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-30dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:id="@+id/logo"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@id/logo"
                        android:text="PROFILE"
                        android:textColor="@color/colorYellow"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-light"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:id="@+id/logout"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@id/title"
                        android:background="@drawable/logout"
                        />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/edit"
                        android:layout_marginTop="46dp"
                        android:layout_toEndOf="@id/logout"
                        android:layout_marginStart="50dp"
                        android:background="@drawable/ic_baseline_edit_24"

                        />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="60dp"
                        android:src="@drawable/mid" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="126dp"
                        android:layout_marginTop="110dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Intern Login"
                        android:textColor="#CCFF66"
                        android:textSize="27dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="intern@gmail.com"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_marginLeft="120dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="9878987898"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_marginLeft="140dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="south, chennai, tamilnadu, 641003"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_marginLeft="50dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="500dp" />
                </LinearLayout>




</FrameLayout>
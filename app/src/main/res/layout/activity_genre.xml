<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbc"
    tools:context=".Genre">

        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#8B008B"
            android:id="@+id/genretool">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/b"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_arrow_back"
                    />
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/logo"
                    android:maxWidth="30dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="200dp"
                    android:text="GENRE"
                    android:textColor="@color/colorYellow"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light"/>

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@id/title"
                    android:id="@+id/logout"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/logout"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/genretool">


        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/box1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/LongShot"
                    android:layout_width="175dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:src="@drawable/genre1" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="169dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:text="Long Shot"
                        android:textColor="@color/colorYellow"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="67dp"
                        android:gravity="center"
                        android:text="Choose Your Genre as Long Shot"
                        android:textColor="@color/colorText"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/box2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/box1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="173dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:text="Close Shot"
                        android:textColor="@color/colorYellow"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="67dp"
                        android:gravity="center"
                        android:text="Choose Your Genre as Close Shot"
                        android:textColor="@color/colorText"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/CloseShot"
                    android:layout_width="207dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:src="@drawable/genre2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/box2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/LeftShot"
                    android:layout_width="175dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:src="@drawable/genre3" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="169dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Left Shot"
                        android:textColor="@color/colorYellow"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="67dp"
                        android:gravity="center"
                        android:text="Choose Your Genre as Left Shot"
                        android:textColor="@color/colorText"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/box3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="172dp"
                    android:layout_height="169dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:text="Right Shot"
                        android:textColor="@color/colorYellow"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="67dp"
                        android:gravity="center"
                        android:text="Choose Your Genre as Right Shot"
                        android:textColor="@color/colorText"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/RightShot"
                    android:layout_width="211dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:src="@drawable/genre4" />

            </LinearLayout>
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
